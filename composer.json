{
  "name": "scoby/wordpress",
  "type": "library",
  "autoload": {
    "psr-4": {
      "ScobyAnalytics\\": "src/"
    }
  },
  "minimum-stability": "stable",
  "require-dev": {
    "wpify/scoper": "2.5.4"
  },
  "scripts": {
    "release": "composer install --optimize-autoloader && composer install --no-dev --optimize-autoloader && composer dumpautoload -o && npm run plugin-zip"
  },
  "config": {
    "allow-plugins": {
      "wpify/scoper": true,
      "php-http/discovery": true
    }
  },
  "extra": {
    "wpify-scoper": {
      "prefix": "ScobyAnalyticsDeps",
      "folder": "deps",
      "globals": [
        "wordpress"
      ],
      "composerjson": "composer-deps.json",
      "composerlock": "composer-deps.lock",
      "autorun": true
    },
    "discovery": {
      "psr/http-factory-implementation": "RebelCode\\Psr7\\HttpFactory"
    }
  },
  "require": {
    "sniccowp/php-scoper-wordpress-excludes": "*"
  }
}
